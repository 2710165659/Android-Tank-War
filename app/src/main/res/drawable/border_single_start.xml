<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下状态 -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#575757" /> <!-- 按下时的背景颜色 -->
            <stroke
                android:width="5dp"
                android:color="#BCFF4848" /> <!-- 边框 -->
            <corners android:radius="8dp" /> <!-- 圆角 -->
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" /> <!-- 内边距 -->
        </shape>
    </item>
    <!-- 默认状态 -->
    <item>
        <shape>
            <solid android:color="@color/menu_bg" /> <!-- 默认背景颜色 -->
            <stroke
                android:width="5dp"
                android:color="#BCFF4848" /> <!-- 边框 -->
            <corners android:radius="8dp" /> <!-- 圆角 -->
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" /> <!-- 内边距 -->
        </shape>
    </item>
</selector>